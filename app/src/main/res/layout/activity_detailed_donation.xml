<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.logcats.fooddonation.DetailedDonationActivity"
    android:background="#634353"
    >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/back"
        android:scaleType="fitXY"
        android:layout_marginBottom="200dp"
        />

    <TextView
        android:id="@+id/title"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/description"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="40dp"
        />

    <TextView
        android:id="@+id/availabilityTime"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/creationDate"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/availabilityTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/deactivationDate"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/creationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/butt"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:text="connect"
        android:textSize="22sp"
        android:textColor="#ffefd1"
        />
</RelativeLayout>
