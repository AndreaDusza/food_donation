<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.logcats.fooddonation.DetailedDonationActivity"
    android:background="#634353"
    >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/back"
        android:scaleType="fitXY"
        android:layout_marginBottom="200dp"
        />

    <TextView
        android:id="@+id/title"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="40sp"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:layout_width="300dp"
        android:layout_height="300dp" />

    <TextView
        android:textSize="22sp"
        android:id="@+id/description"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="50dp"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:id="@+id/availabilityTime"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:id="@+id/creationDate"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/availabilityTime"
        android:layout_alignParentLeft="true"
        android:paddingLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:id="@+id/deactivationDate"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/availabilityTime"
        android:layout_alignParentRight="true"
        android:paddingRight="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/connectButton"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/butt"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:text="@string/connect"
        android:textSize="22sp"
        android:textColor="#ffefd1"
        />
        
</RelativeLayout>
