<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.logcats.fooddonation.CreateDonationActivity"
    android:background="#634353"
    >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/back"
        android:scaleType="fitXY"
        android:layout_marginBottom="200dp"
        />

    <TextView
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="50dp"
        android:id="@+id/titleLabel"
        android:text="@string/title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="50dp"
        android:id="@+id/title"
        android:layout_below="@+id/titleLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="50dp"
        android:id="@+id/descriptionLabel"
        android:layout_below="@+id/title"
        android:text="@string/description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="50dp"
        android:id="@+id/description"
        android:layout_below="@+id/descriptionLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="50dp"
        android:id="@+id/availabilityLabel"
        android:text="@string/availability_time_label"
        android:layout_below="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="50dp"
        android:id="@+id/availabilityTime"
        android:layout_below="@+id/availabilityLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:id="@+id/takePictureButton"
        android:layout_below="@+id/availabilityTime"
        android:text="@string/take_picture_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffefd1"
        android:background="#3c3636"
        />

    <Button
        android:id="@+id/saveButton"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/butt"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:text="@string/save_label"
        android:textSize="22sp"
        android:textColor="#ffefd1" />
</RelativeLayout>
